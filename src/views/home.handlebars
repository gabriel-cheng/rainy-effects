<main class="rainy_home-container">
    <section class="rainy_home-first">
        <div class="rainy_home-darkest-bg"></div>
        <div class="rainy_home-first-subcontainer">
            <div class="rainy_home-clock">
                <div class="rainy_home-clock-hour">
                    <h1>17</h1>
                </div>
                <div class="rainy_home-clock-minutes">
                    <h1>43</h1>
                </div>
                <div class="rainy_home-clock-seconds">
                    <h1>00</h1>
                </div>
            </div>
        </div>
    </section>
    <section class="rainy_home-second"></section>
    <section class="rainy_home-third"></section>
    <section class="rainy_home-fourt"></section>
    <section class="rainy_home-fourth"></section>
    <section class="rainy_home-fifth"></section>
</main>

<script>
    const hour_el = document.querySelector(".rainy_home-clock-hour h1");
    const minutes_el = document.querySelector(".rainy_home-clock-minutes h1");
    const seconds_el = document.querySelector(".rainy_home-clock-seconds h1");

    const clock = setInterval(() => {
        const date = new Date();
        let hour = date.getHours();
        let minutes = date.getMinutes();
        let seconds = date.getSeconds();

        if(hour < 10) {
            hour = "0" + hour;
        }
        if(minutes < 10) {
            minutes = "0" + minutes;
        }
        if(seconds < 10) {
            seconds = "0" + seconds;
        }

        hour_el.textContent = hour;
        minutes_el.textContent = minutes;
        seconds_el.textContent = seconds;
    });
</script>